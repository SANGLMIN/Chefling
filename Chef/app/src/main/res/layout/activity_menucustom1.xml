<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.example.sungho.chef.MenuCustom1"/>
    </data>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sungho.chef.MenuCustom1">

        <TextView
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ff9100"
            android:text="메뉴판 만들기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="20dp"
            android:textColor="#b3b3b3"
            android:textSize ="18dp"
            android:textStyle="bold"
            android:text="1. 매장 정보 입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/stage1"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@drawable/stage"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@drawable/stage"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@drawable/stage"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@drawable/stage"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30px"
                android:textStyle="bold"
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint=" EX) Pasta House"
                android:layout_marginLeft="30dp"
                android:layout_width="500px"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30px"
                android:textStyle="bold"
                android:text="설명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint=" EX) 이탈리아 레스토랑"
                android:layout_marginLeft="30dp"
                android:layout_width="500px"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30px"
                android:textStyle="bold"
                android:text="이미지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="#efefef"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_marginLeft="18dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/nextbtn"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:padding="0dp"
            android:src="@drawable/nextbtn2"
            android:layout_width="240dp"
            android:layout_height="58dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
</layout>